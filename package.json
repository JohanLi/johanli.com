{
  "name": "johanli",
  "version": "1.0.0",
  "description": "Personal website, using React, Express and Node.js https://johanli.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/JohanLi/johanli.com.git"
  },
  "main": "app.js",
  "scripts": {
    "start": "npm-run-all --parallel dev:*",
    "dev:webpack": "webpack-dev-server",
    "dev:nodemon": "nodemon server/apiOnly.js",
    "lint": "eslint client/components server test --ext .js,.jsx",
    "test": "mocha test/setup.js test/*.test.{js,jsx}",
    "build": "npm-run-all build:*",
    "build:clear": "rm -rf build",
    "build:webpack": "webpack -p --config webpack.prod.js",
    "build:imagemin": "node cli/imagemin.js",
    "build:move-files": "cd build && rm -rf img public/index.html && mv styles* client* favicon.ico public",
    "prod:start": "forever restart build/server.js || forever start build/server.js",
    "prod:stop": "forever stop build/server.js",
    "setup": "ansible-playbook -i ansible/hosts ansible/tasks/setup.yml",
    "deploy": "ansible-playbook -i ansible/hosts ansible/tasks/deploy.yml",
    "deploy:database": "ansible-playbook -i ansible/hosts ansible/tasks/deploy-database.yml"
  },
  "author": "Johan Li",
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "react",
      "stage-0"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    }
  },
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "forever": "^0.15.3",
    "image-size": "^0.6.0",
    "mysql2": "^1.3.5",
    "prismjs": "^1.6.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-document-title": "^2.0.3",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-router-dom": "^4.1.1",
    "redis": "^2.7.1",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "css-loader": "^0.28.0",
    "enzyme": "^2.9.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "imagemin": "^5.3.1",
    "imagemin-gifsicle": "^5.1.0",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^5.0.1",
    "imagemin-svgo": "^5.2.2",
    "mocha": "^3.4.2",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "raw-loader": "^0.5.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "sass-loader": "^6.0.3",
    "script-ext-html-webpack-plugin": "^1.8.3",
    "style-loader": "^0.18.1",
    "url-loader": "^0.5.8",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.4.2",
    "webpack-node-externals": "^1.6.0"
  }
}
