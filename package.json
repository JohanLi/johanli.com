{
  "name": "johanli",
  "version": "1.0.0",
  "description": "Personal website, using React, Express and Node.js https://johanli.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/JohanLi/johanli.com.git"
  },
  "scripts": {
    "start": "npm-run-all --parallel dev:*",
    "dev:client": "webpack-dev-server --mode development",
    "dev:api": "nodemon server/index.js --exec babel-node --watch server",
    "lint": "npm-run-all -p lint:*",
    "lint:js": "eslint src server test --ext .js,.jsx",
    "lint:css": "stylelint src/**/*.scss",
    "test": "jest",
    "test:cypress": "cypress run --project test/cypress",
    "cypress": "cypress open --project test/cypress",
    "build": "npm-run-all build:*",
    "build:clear": "rm -rf build",
    "build:webpack": "webpack -p --mode production --config webpack.production.js",
    "build:imagemin": "node cli/imagemin.js",
    "build:move-files": "cd build && rm -rf img public/index.html && mv styles* client* favicon.ico public",
    "prod:start": "forever restart build/server.js || forever start build/server.js",
    "prod:stop": "forever stop build/server.js",
    "setup": "ansible-playbook -i ansible/hosts ansible/tasks/setup.yml",
    "deploy": "ansible-playbook -i ansible/hosts ansible/tasks/deploy.yml",
    "deploy:database": "ansible-playbook -i ansible/hosts ansible/tasks/deploy-database.yml"
  },
  "author": "Johan Li",
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": [
              "last 2 versions"
            ]
          }
        }
      ],
      "@babel/preset-react",
      "@babel/preset-stage-0"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "react/no-did-mount-set-state": 0,
      "function-paren-newline": 0,
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to"
          ]
        }
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-css-modules"
    ]
  },
  "engines": {
    "node": ">=8.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "cookie-parser": "^1.4.3",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "forever": "^0.15.3",
    "html-react-parser": "^0.4.3",
    "image-size": "^0.6.2",
    "mobx": "^4.2.0",
    "mobx-react": "^5.0.0",
    "mysql2": "^1.5.3",
    "prismjs": "^1.13.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.0",
    "react-document-title": "^2.0.3",
    "react-dom": "^16.3.0",
    "react-hot-loader": "^4.0.0",
    "react-router-dom": "^4.2.2",
    "redis": "^2.8.0",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@babel/node": "^7.0.0-beta.44",
    "@babel/polyfill": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@babel/preset-react": "^7.0.0-beta.44",
    "@babel/preset-stage-0": "^7.0.0-beta.44",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.0.0-beta.2",
    "css-loader": "^0.28.11",
    "cypress": "^2.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.1.0",
    "identity-obj-proxy": "^3.0.0",
    "imagemin": "^5.3.1",
    "imagemin-gifsicle": "^5.2.0",
    "imagemin-mozjpeg": "^7.0.0",
    "imagemin-pngquant": "^5.1.0",
    "imagemin-svgo": "^6.0.0",
    "jest": "^22.4.3",
    "loader-utils": "^1.1.0",
    "node-sass": "^4.8.3",
    "nodemon": "^1.17.2",
    "npm-run-all": "^4.1.2",
    "react-svg-loader": "^2.1.0",
    "react-test-renderer": "^16.3.0",
    "request-promise": "^4.2.2",
    "sass-loader": "^7.0.1",
    "script-ext-html-webpack-plugin": "^2.0.1",
    "style-loader": "^0.21.0",
    "stylelint": "^9.1.3",
    "stylelint-config-css-modules": "^1.2.0",
    "stylelint-config-standard": "^18.2.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.4.1",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js",
    "moduleNameMapper": {
      "\\.(svg)$": "<rootDir>/test/mocks/file.js",
      "\\.(scss)$": "identity-obj-proxy"
    }
  }
}
