{
  "name": "johanli",
  "version": "1.0.0",
  "description": "Personal website, using React, Express and Node.js https://johanli.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/JohanLi/johanli.com.git"
  },
  "main": "app.js",
  "scripts": {
    "start": "npm-run-all --parallel nodemon browser-sync watch",
    "production:start": "forever restart app.js || forever start app.js",
    "nodemon": "nodemon app.js --ext js,pug --ignore src/ --ignore public/",
    "browser-sync": "browser-sync start --proxy localhost:8080 --files public/**/* --files views/**/* --reload-delay 200 --no-notify",
    "build": "npm-run-all build:*",
    "build:js-folder": "mkdirp public/js/",
    "build:js": "babel src/js/ --out-file public/js/scripts.min.js --presets es2015 --minified --no-comments",
    "build:css": "node-sass src/sass/base.scss public/css/base.css --output-style compressed",
    "watch": "npm-run-all --parallel watch:*",
    "watch:js": "npm run build:js -- --watch src/js/",
    "watch:css": "npm run build:css && npm run build:css -- --watch src/sass/",
    "imagemin": "node imagemin.js",
    "lint": "eslint app.js controllers/**/*.js models/**/*.js src/js/*.js src/js/pokemon-go/*.js",
    "setup": "cd ansible && ansible-playbook -i hosts setup.yml",
    "setup:database": "cd ansible && ansible-playbook -i hosts database.yml",
    "deploy": "cd ansible && ansible-playbook -i hosts deploy.yml",
    "deploy:database": "cd ansible && ansible-playbook -i hosts deploy-database.yml",
    "new": "npm-run-all --parallel new:*",
    "new:webpack": "webpack-dev-server",
    "new:nodemon": "nodemon server/index.js",
    "new:lint": "eslint src/components index.js store.js webpack.config.js --ext .js,.jsx"
  },
  "author": "Johan Li",
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "react"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true
    }
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "forever": "^0.15.3",
    "mkdirp": "^0.5.1",
    "mysql2": "^1.1.2",
    "prismjs": "^1.6.0",
    "prop-types": "^15.5.8",
    "pug": "^2.0.0-beta3",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-router-dom": "^4.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "url-loader": "^0.5.8",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.2"
  }
}
