{
  "name": "johanli",
  "version": "1.0.0",
  "description": "Personal website, using React, Express and Node.js https://johanli.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/JohanLi/johanli.com.git"
  },
  "main": "app.js",
  "scripts": {
    "start": "npm-run-all --parallel dev:*",
    "dev:webpack": "webpack-dev-server",
    "dev:nodemon": "nodemon server/apiOnly.js --exec babel-node --watch server",
    "lint": "eslint client/components server test --ext .js,.jsx",
    "test": "mocha --require babel-polyfill --require babel-core/register test/setup.js test/*.test.{js,jsx}",
    "build": "npm-run-all build:*",
    "build:clear": "rm -rf build",
    "build:webpack": "webpack -p --config webpack.prod.js",
    "build:imagemin": "node cli/imagemin.js",
    "build:move-files": "cd build && rm -rf img public/index.html && mv styles* client* favicon.ico public",
    "prod:start": "forever restart build/server.js || forever start build/server.js",
    "prod:stop": "forever stop build/server.js",
    "setup": "ansible-playbook -i ansible/hosts ansible/tasks/setup.yml",
    "deploy": "ansible-playbook -i ansible/hosts ansible/tasks/deploy.yml",
    "deploy:database": "ansible-playbook -i ansible/hosts ansible/tasks/deploy-database.yml"
  },
  "author": "Johan Li",
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "react/no-did-mount-set-state": 0,
      "function-paren-newline": 0,
      "jsx-a11y/anchor-is-valid": ["error", {
        "components": ["Link"],
        "specialLink": ["to"]
      }]
    }
  },
  "engines": {
    "node": ">=8.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "forever": "^0.15.3",
    "image-size": "^0.6.2",
    "mysql2": "^1.5.1",
    "prismjs": "^1.10.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-document-title": "^2.0.3",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.1.3",
    "react-router-dom": "^4.2.2",
    "redis": "^2.8.0",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "css-loader": "^0.28.9",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "imagemin": "^5.3.1",
    "imagemin-gifsicle": "^5.2.0",
    "imagemin-mozjpeg": "^7.0.0",
    "imagemin-pngquant": "^5.0.1",
    "imagemin-svgo": "^6.0.0",
    "loader-utils": "^1.1.0",
    "mocha": "^5.0.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.11",
    "npm-run-all": "^4.1.2",
    "raw-loader": "^0.5.1",
    "react-test-renderer": "^16.2.0",
    "sass-loader": "^6.0.6",
    "script-ext-html-webpack-plugin": "^1.8.8",
    "style-loader": "^0.19.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-node-externals": "^1.6.0"
  }
}
