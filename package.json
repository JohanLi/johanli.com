{
  "name": "johanli",
  "version": "1.0.0",
  "description": "Personal website, using Node.js and Express https://johanli.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/JohanLi/johanli.com.git"
  },
  "main": "app.js",
  "scripts": {
    "postinstall": "npm-run-all build:*",
    "start": "npm-run-all --parallel nodemon browser-sync watch:*",
    "nodemon": "nodemon app.js --ext js,pug --ignore src/",
    "browser-sync": "browser-sync start --proxy localhost:8080 --files \"public/**\"",
    "build:js-folder": "mkdirp public/js/",
    "build:js": "babel src/js/ --out-file public/js/scripts.min.js --minified --no-comments ",
    "build:css": "node-sass src/sass/base.scss public/css/base.css --output-style compressed",
    "watch:js": "npm run build:js -- --watch src/js/",
    "watch:css": "npm run build:css && npm run build:css -- --watch src/sass/"
  },
  "author": "Johan Li",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "mkdirp": "^0.5.1",
    "mysql": "^2.11.1",
    "pug": "^2.0.0-beta3"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "browser-sync": "^2.14.3",
    "node-sass": "^4.0.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.2"
  }
}
